		 url("../fonts/cantarell/cantarell-bold.svg#Cantarell-Bold") format("svg");

// F U N C T I O N S //

bgcolor(n)
	background n
	&:hover
		background lighten(n,10%)
	&:active
		background darken(n,10%)
link(n)
	color n
	&:hover
		color lighten(n,10%)
	&:active
		color darken(n,10%)

gris = #1a1a1a
links = #3CE7BD
dark-link = #43cdab
verde = #5cbf9c
t-white = rgba(255, 255, 255, .1)
